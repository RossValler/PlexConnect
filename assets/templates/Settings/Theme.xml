<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <itemCollectionWithImageHeader id="SettingsPage_Movies">
      <header>
        <imageHeader>
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=552|1080=828)}}, 0" required="true">
            {{URL(:/fanartcache/{{getBackground({{EVAL({\
              'title'        : "{{EVAL(quote_plus("{{TEXT(Settings)}}"))}}",\
              'subtitle'     : "{{EVAL(quote_plus("{{TEXT(Theme Options)}}"))}}",\
              'resolution'   : "{{VAL(^aTVScreenResolution)}}",\
              'layers'       : ["PlexSubList"]\
            })}})}})}}
          </image>
        </imageHeader>
      </header>

      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary>PlexConnect Theme Dev.</summary>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Designer)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>CyberGhost84</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/thumbnails/Plex/images/PlexConnectLogo.png)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Menu Background)}}</title>
              </horizontalDivider>
            </header>
            <items>

              <oneLineMenuItem id="MenuBackground" onSelect="toggleTemplateSettings('MenuBackground', 'Settings_Theme')">
                <label>{{TEXT(Menu Background)}}</label>
                <rightLabel>{{SETTING(menubackground)}}</rightLabel>
              </oneLineMenuItem>

              <oneLineMenuItem id="GridTint" onSelect="toggleSettings('GridTint', 'Settings_Theme')">
                <label>{{TEXT(Grid Tint)}}</label>
                <rightLabel>{{SETTING(gridtint)}}</rightLabel>
              </oneLineMenuItem>

              <oneLineMenuItem id="ListTint" onSelect="toggleTemplateSettings('ListTint', 'Settings_Theme')">
                <label>{{TEXT(List Tint)}}</label>
                <rightLabel>{{SETTING(listtint)}}</rightLabel>
              </oneLineMenuItem>

              <oneLineMenuItem id="ParadeListTint" onSelect="toggleSettings('ParadeListTint', 'Settings_Theme')">
                <label>{{TEXT(Parade List Tint)}}</label>
                <rightLabel>{{SETTING(paradelisttint)}}</rightLabel>
              </oneLineMenuItem>

               </items>
          </menuSection>

          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Text Color)}}</title>
              </horizontalDivider>
            </header>
            <items>

             <oneLineMenuItem id="TitleColor" onSelect="toggleTemplateSettings('TitleColor', 'Settings_Theme')">
                <label>{{TEXT(Title Color)}}</label>
                <rightLabel>{{SETTING(titlecolor)}}</rightLabel>
              </oneLineMenuItem>

              <oneLineMenuItem id="SubtitleColor" onSelect="toggleTemplateSettings('SubtitleColor', 'Settings_Theme')">
                <label>{{TEXT(Subtitle Color)}}</label>
                <rightLabel>{{SETTING(subtitlecolor)}}</rightLabel>
              </oneLineMenuItem>

              <oneLineMenuItem id="TableTitleColor" onSelect="toggleTemplateSettings('TableTitleColor', 'Settings_Theme')">
                <label>{{TEXT(Tabletitle Color)}}</label>
                <rightLabel>{{SETTING(tabletitlecolor)}}</rightLabel>
              </oneLineMenuItem>

              <oneLineMenuItem id="MetadataColor" onSelect="toggleTemplateSettings('MetadataColor', 'Settings_Theme')">
                <label>{{TEXT(Metadata Color)}}</label>
                <rightLabel>{{SETTING(metadatacolor)}}</rightLabel>
              </oneLineMenuItem>

              </items>
          </menuSection>

        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
